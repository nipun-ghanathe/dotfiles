### Startup:

# Apps
exec swaymsg "workspace 2; exec firefox"
exec swaymsg "workspace 1; exec $term"
# Keyboard Tool
exec_always --no-startup-id ~/.cargo/bin/kanata --cfg ~/.config/kanata/kanata.cfg
# Notification Daemon
exec_always mako


