#!/bin/bash

command -v rclone >/dev/null || exit 1

rclone sync /home/nipun/code gdrive:backup/code \
	--verbose \
	--progress \
	--exclude '**/.venv/**' \
	--exclude '**/__pycache__/**' \
	--exclude '**/.ipynb_checkpoints/**' \
	--exclude '**/.pytest_cache/**'

rclone sync /home/nipun/projects gdrive:backup/projects \
	--verbose \
	--progress \
	--exclude '**/.venv/**' \
	--exclude '**/__pycache__/**' \
	--exclude '**/.ipynb_checkpoints/**' \
	--exclude '**/.pytest_cache/**'

rclone sync /home/nipun/vault gdrive:backup/vault \
	--verbose \
	--progress
