* {
  border: none;
  border-radius: 0;
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 12px;
  min-height: 0;
  padding: 0;
}

window#waybar {
  background: rgba(0, 0, 0, 0.6);
  color: #cccccc;
  box-shadow: none;
}

#workspaces {
  margin-left: 6px;
}

#workspaces button {
  padding: 0 8px;
  background: transparent;
  color: #999999;
}

#workspaces button.focused {
  color: #ffffff;
  background: rgba(255, 255, 255, 0.1);
}

#workspaces button.urgent {
  color: #ff6666;
}

#sway-mode {
  color: #dddddd;
  background: transparent;
  padding: 0 8px;
}

#wireplumber,
#network,
#backlight,
#battery,
#clock {
  padding: 0 8px;
  color: #bbbbbb;
  background: transparent;
  margin: 0 2px;
}

#battery.warning {
  color: #ffaa00;
}

#battery.critical {
  color: #ff5555;
}

