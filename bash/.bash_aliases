# vim
alias vi="nvim"

# python
alias python="python3"
alias ipython="ipython3"

# move, copy, remove
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -v"

# ls
alias ls="ls --color=auto"
alias l="ls -lah"
alias la="ls -A"
alias ll="ls -lh"

# grep
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"
