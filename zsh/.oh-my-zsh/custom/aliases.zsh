# vim
alias vi="nvim"

# python
alias python="python3"
alias py="python3"
alias ipython="ipython3"
alias ipy="ipython3"

# git
alias gs="git status"
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gd="git diff"
alias gco="git checkout"

# move, copy, remove
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -v"

# ls
alias l="ls -lah"
alias la="ls -a"
alias ll="ls -lh"

# grep
alias grep="grep --color=auto"
