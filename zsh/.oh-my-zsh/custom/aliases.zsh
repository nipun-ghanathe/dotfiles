# vim
alias vi="nvim"
alias nv="nvim"

# python
alias python="python3"
alias py="python3"
alias ipython="ipython3"
alias ipy="ipython3"

# git
alias g="git"
alias gs="git status"
alias ga="git add"
alias gaa="git add -A"
alias gc="git commit"
alias gcm="git commit -m"
alias gcam="git commit -am"

# move, copy, remove
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -v"

# ls
alias l="ls -lah"
alias la="ls -a"
alias ll="ls -lh"

# grep
alias grep="grep --color=auto"
